<root main_tree_to_execute="MainTree">
    <BehaviorTree ID="MainTree">
        <ReactiveFallback>
            <SubTree ID="Mission" node="node"/>
            <SaySomething message="Stop"/>
        </ReactiveFallback>
    </BehaviorTree>

    <BehaviorTree ID="Mission">
        <ReactiveSequence>
            <Inverter>
                <IsPressureGreaterThan min_pressure="2500" pressure_topic="/riptide_1/pressure_broadcaster/pressure_status"/>
            </Inverter>
            <IsPressureGreaterThan min_pressure="1060" pressure_topic="/riptide_1/pressure_broadcaster/pressure_status"/>
            <Sequence>
                <Delay delay_msec="5000">
                    <SaySomething message="Call depth=1m"/>
                </Delay>
                <Delay delay_msec="5000">
                    <SaySomething message="Call depth=0m"/>
                </Delay>
            </Sequence>
        </ReactiveSequence>
    </BehaviorTree>
</root>